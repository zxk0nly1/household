/* pages/new/new.wxss */
.block{
  margin-bottom: 40rpx;
}
.block image{
  width: 100%;

}
.block .title{
  margin-bottom: 40rpx;
  padding: 0 1%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.block .bottom{
  display: flex;
  justify-content: space-between;
  color: #666;
  align-items: flex-end;
  font-size: 26rpx;
  padding: 0 1%;
}
.block .bottom>.bottom_right{
  color:#fff;
  background: orange;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  width: 20%;
}
.blockend{
  padding-bottom: 300rpx;
}